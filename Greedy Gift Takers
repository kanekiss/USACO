int n;
vector<int> a;
bool check(int r)
{
	vector<int> fs = vector<int>(a.begin(), a.begin() + r);
	sort(all(fs));
	for (int i = 0; i < fs.size(); ++i)
	{
		if (fs[i] <= i + 1) return 1;
	}
	return 0;
}
signed main()
{
	fastio();
	freopen("greedy.in", "r", stdin);
	freopen("greedy.out", "w", stdout);
	cin >> n;
	a.resize(n);
	vin(a);
	for (int& i : a)i = n - i;
	int l = -1, r = n;
	while (r - l > 1)
	{
		int m = (l + r) / 2;
		if (check(m)) r = m;
		else  l = m;
	}
	cout << n - r;	
//	sp;
}
